{% extends 'base.html.twig' %}


{% block title %}Liste des messages{% endblock %}

{% block body %}
	{{ dump(messages) }}
	{# affichage des éventuels messages flash #}
	{% for label, messages in app.flashes %}
		{% for message in messages %}
		<div class="alert alert-{{ label }}">{{ message }}</div>
		{% endfor %}
	{% endfor %}


	{% for message in messages %}
		<article>
			<h3>{{message.sujet}}</h3>
			publié le {{message.dateenvoi|date('d/m/Y') }}
		</article>
		<p>{{message.nom}}</p>
		<li class="nav-item">
		    <a class="nav-link" href="{{ path('idMessage', {id: message.id}) }}">Voir le message</a>
